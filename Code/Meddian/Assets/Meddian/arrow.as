package {	import flash.display.MovieClip;	import flash.events.Event;	public class arrow extends MovieClip	{		public var power:Number;		public var gravity : Number = 0;		public function arrow(newPower : Number = 1)		{			addEventListener(Event.ENTER_FRAME, tick);			power = newPower;		}		function tick(e:Event)		{			x += Math.cos(rotation * Math.PI/180) * power;			y += Math.sin(rotation * Math.PI/180) * power - gravity;			gravity -=  0.1;			//rotation = lerp(rotation, 180, gravity / 1000);		}		function lerp( start : Number, end : Number, amt : Number )		{			return start + ( end - start ) * amt;		}	}}